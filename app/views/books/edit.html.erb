  <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
  </ul>
 <% end %>
 <%= form_with model:@book, url: update_book_path(@book.id), method: :patch do |f| %>
  <ul>
     <h4>Title</h4>
     
     <li><%= f.text_field :title %></li>
     
