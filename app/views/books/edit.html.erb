     <li><%= f.text_area :body %></li>
     
     <li><%= f.submit 'Update Book' %></li>
     
  </ul>
 <% end %>
 
 <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', '/books' %>
</div>