<div class="header2">
     <h1>Editing Book</h1>
</div>
<div class="content2">
  <%= form_with model:@book, url: update_book_path(@book.id), method: :patch do |f| %>
 <ul>
     <h4>Title</h4>
     
     <li><%= f.text_field :title %></li>
     
     <h4>Body</h4>
     
     <li><%= f.text_area :body %></li>
     
     <li><%= f.submit 'Update Book' %></li>
     
  </ul>
 <% end %>
 
 <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', '/books' %>
</div>