<div class="index">
 
  <div class="header">
  
   <h2>Books</h2>
  
  </div>
  <div class="main">
    <table cellspacing="15">
     <tr>
      <th class="box1">Title</th>
      <th class="box2">Body</th>
      <th></th>
     </tr>
   <% @books.each do |book| %>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %></td>
     </tr>
   <% end %>
    </table>
  </div>
  <div class="content">
    <h2 class="content-title">New book</h2>
    <% if @book.errors.any? %>
     <%= @book.errors.count %>error prohibited this book from being saved:
     <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>
     <%= form_with model:@book do |f| %>
    
      <ul>
     
       <h4>Titl</h4>
     
       <li><%= f.text_field :title %></li>
     
       <h4>Body</h4>
     
       <li><%= f.text_area :body %></li>
      
       <li><%= f.submit 'Create Book' %></li>
     
      </ul>
   
     <% end %>
  </div>
</div>