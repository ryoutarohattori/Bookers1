<div class="index">
 
 <div class="header">
  
   <h2>Books</h2>
  
 </div>

 <div class="main">
   <table>
    <tr>
     <th class="box1">Title</th>
     <th class="box2">Body</th>
     <th></th>
    </tr>
    <tr>
     <td></td>
     <td></td>
     <td>
      <%= link_to 'Show',book_path(book.id) %>
     </td>
    </tr>
   </table>
 </div>

 <div class="content">
   <h2 class="content-title">New book</h2>
   
    <%= form_with model:@book do |f| %>
    
    <ul>
     
     <h4>Title</h4>
     
     <li><%= f.text_field :title %></li>
     
     <h4>Body</h4>
     
     <li><%= f.text_area :body %></li>
     
     <li><%= f.submit 'Create Book' %></li>
     
    </ul>
   
   <% end %>
  
 </div>
</div>